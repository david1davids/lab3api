                  <Font name="Arial" size="24.0" />
               </font>
            </Label>
            <Button fx:id="user" layoutX="331.0" layoutY="86.0" mnemonicParsing="false" onAction="#onClickUser" prefHeight="33.0" prefWidth="69.0" style="-fx-background-color: #ffffff; -fx-border-color: #dddddd; -fx-cursor: hand;" text="Users" />
            <Button fx:id="task" layoutX="400.0" layoutY="86.0" mnemonicParsing="false" onAction="#onClickTask" prefHeight="33.0" prefWidth="69.0" style="-fx-border-color: #dddddd; -fx-background-color: #d3d3d3; -fx-cursor: hand;" text="Tasks" />
