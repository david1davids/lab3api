            <ImageView fitHeight="468.0" fitWidth="770.0" layoutX="15.0" layoutY="144.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../task-management-hero-banner.png" />
               </image>
            </ImageView>
            <Label layoutX="323.0" layoutY="30.0" text="Task Manager" textFill="#9a9090">
